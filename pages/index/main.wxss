.home {
  width: 100%;
  overflow-x: hidden;
  background-color: #f5f5f5;
}
.coming-mv {
  background-color: #fff;
  padding-bottom: 40rpx;
  border-bottom: 2rpx solid #e2e2e2;
}
.cm-title {
  padding: 20rpx;
}
.cm-box {
  padding-left: 20rpx;
  width: 100%;
  overflow-x: auto;
}
.cm-list {
  width: auto;
  white-space: nowrap;
}
.cm-item {
  width: 200rpx;
  display: inline-block;
  margin-right: 20rpx;
}
.cm-item>image {
  width: 100%;
  height: 270rpx;
}
.cm-name {
  font-size: 30rpx;
}
.cm-yy {
  font-size: 28rpx;
  color: #999;
  white-space: nowrap;
}
.hot-mv {
  margin-top: 20rpx;
  background-color: #fff;
  border-top: 2rpx solid #e2e2e2;
}
.hot-title {
  padding-left: 20rpx;
  padding-top: 20rpx;
}
.hot-list {
  padding: 0 20rpx;
}
