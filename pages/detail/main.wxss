/* pages/detail/main.wxss */
.bott-btn {
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}
.bott-btn > image {
  width: 60rpx;
  height: 60rpx;
}
.bott-btn > view {
  width: 300rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-style: 40rpx;
  color: #fff;
  background-color: #d92812;
}
.detail {
  height: 1040rpx;
  background-color: #f5f5f5;
  padding: 20rpx;
  width: 100%;
  overflow-x: hidden;
  box-sizing: border-box;
}
.bottom {
  background-color: #fff;
  margin-top: 20rpx;
  border-top: 2rpx solid #e2e2e2;
  padding: 20rpx;
}
.desi {
  font-size: 36rpx;
  padding-top: 20rpx;
}
.lako {
  margin-top: 20rpx;
}
.top {
  border-bottom: 2rpx solid #e2e2e2;
  height: 400rpx;
  display: flex;
  padding: 30rpx;
  background-color: #fff;
  box-sizing: border-box;
}
.sl-img {
  width: 260rpx;
  height: 340rpx;
}
.right {
  flex: 1;
  padding-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  overflow: hidden;
}